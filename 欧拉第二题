#include<stdio.h>
int main()
{
    int f[3] = {0,1,0};//节省空间.循环数组；
    int sum = 0,n = 1;
    while(f[(n+2)%3]+f[(n+1)%3]<=4000000)//斐波那契数列满足f【n】=f【n-1】+f【n-2】即满足f【【n+2】%3】+f【【n+1】%3】=f【n%3】;
    {
        f[(n+1)%3]=f[n%3]+f[(n+2)%3];//递归生成后面的数；
        if((f[(n+1)%3]&1)==0)//等价于f[n%3]%2==0;
        sum+=f[(n+1)%3];
        n++;
    }
    printf("%d\n",sum);
    return 0;
}
